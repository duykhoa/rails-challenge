<% @order_items.each do |order_item| -%>
  <div>
    <%= order_item.meal_name%>
    Quantity: <%= order_item.qty%>
    <div>
      <input
        name="order_item[<%=order_item.id%>]" class="rating rating-loading"
        data-min="0" data-max="5" data-step="1" value="<%= order_item.rate_point %>"
        data-show-caption=false data-show-clear=false
        data-ratable_id=1 data-ratable_type="order_item"
        data-display-only="<%= !@user_ratable %>"
      >

      <% if order_item.comment %>
        <div>
          Comment:
          <%= order_item.comment.content %>
        </div>
      <% end %>

      <% if !order_item.comment && @user_ratable %>
        <div class="form-group">
          Comment:
          <input
            name="comment[order_item][<%=order_item.id%>]"
            class="form-control"
          />
        </div>
      <%end%>
    </div>
  </div>
<% end %>

<div>
  Delivery service
  <input
    name="delivery[<%= @delivery.id%>]" class="rating rating-loading"
    data-min="0" data-max="5" data-step="1" value="<%= @delivery.rate_point %>"
    data-show-caption=false data-show-clear=false
    data-ratable_id="<%= @delivery.id %>" data-ratable_type="delivery"
    data-display-only="<%= !@user_ratable %>"
  >

  <% if @delivery.comment %>
    <div>
      Comment:
      <%= @delivery.comment.content %>
    </div>
  <% end %>

  <% if !@delivery.comment && @user_ratable %>
    <div class="form-group">
      Comment:
      <input
        name="comment[delivery][<%=@delivery.id%>]"
        class="form-control"
      />
    </div>
  <%end%>
</div>
