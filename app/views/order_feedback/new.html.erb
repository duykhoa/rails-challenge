<div>
  <h1>
    Your feedback for Order <%= @order.id %>
  </h1>

  <div>
    <form id='form-rating' action="/rates" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input type="hidden" name="order_id" value="<%= @order.id %>">

      <% @order_items.each do |order_item| -%>
        <div>
          <%= order_item.meal_name%>
          Quantity: <%= order_item.qty%>
          <div>
            <input
              name="order_item[<%=order_item.id%>]" class="rating rating-loading"
              data-min="0" data-max="5" data-step="1" value=2
              data-show-caption=false data-show-clear=false
              data-ratable_id=1 data-ratable_type="order_item"
            >
          </div>
        </div>
      <% end -%>

      <div>
        Delivery service
        <input
          name="delivery" class="rating rating-loading"
          data-min="0" data-max="5" data-step="1" value=2
          data-show-caption=false data-show-clear=false
          data-ratable_id="<%= @delivery.id %>" data-ratable_type="delivery"
        >
      </div>
      <input type="submit" class="btn btn-default"/>
    </form>
  </div>
</div>

<%= link_to "Logout", destroy_user_session_path, method: :delete %>
