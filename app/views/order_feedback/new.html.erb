<div>
  <h1>
    Your feedback for Order <%= @order.id %>
  </h1>
  <div>
    <% @order.order_items.each do |order_item| -%>
      <div>
        <%= order_item.meal_name %>
        <input type="radio" name="feedback-#{order_item.id}" />
        <input type="radio" name="feedback-#{order_item.id}" />
        <input type="radio" name="feedback-#{order_item.id}" />
        <input type="radio" name="feedback-#{order_item.id}" />
        <input type="radio" name="feedback-#{order_item.id}" />
      </div>
    <% end -%>

    <input type="submit" value="Submit" />

  </div>

  <div>
    <input
      id="input-1" name="input-1" class="rating rating-loading"
      data-min="0" data-max="5" data-step="1" value=2
      data-show-caption=false data-show-clear=false
      data-ratable_id=1 data-ratable_type="meal"
    >

    <input
      id="input-2" name="input-2" class="rating rating-loading"
      data-min="0" data-max="5" data-step="1" value=2
      data-show-caption=false data-show-clear=false
      data-ratable_id=4 data-ratable_type="meal"
    >
  </div>
</div>

